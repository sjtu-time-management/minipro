<view class="timeselect">
  <text class="texts"> 时间 : </text>
  <view class="section">

    <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindTimeChange">

      <view class="picker">

       {{cstart}}

      </view>

    </picker>

  </view>
  <text>~</text>
  <view class="section">

    <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindTimeChangeend">

      <view class="picker">

        {{cend}}

      </view>

    </picker>

  </view>
</view>
<view class="timeselect">
<text class="texts">日期 : </text> 
<view class="section">

  <picker mode="date" value="{{date}}" start="2020-01-01" end="2022-12-31" bindchange="bindDateChange">

    <view class="picker2">

      {{dates}}

    </view>

  </picker>

</view>
</view>
